<head>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<h2>
  Three simple questions to unlock your Inner-Animal!
</h2>
<div>
  <img id="" src="tempsnip.png" alt="">
  {{#each animalObj}}
  <p>
    {{this.q_1}}
  </p>
  {{/each}}
  <form action="#">
    <div class="resultscore1">
      <p>
        <input class="with-gap" type="radio" name="ques1" id="a1" value="30" />
        <label for="a1">
          Compromise
        </label>
        <br />
        <input class="with-gap" type="radio" name="ques1" id="b1" value="20" />
        <label for="b1">
          Flip a coin
        </label>
        <br />
        <input class="with-gap" type="radio" name="ques1" id="c1" value="10" />
        <label for="c1">
          Voice your opinion louder
        </label>
      </p>
    </div>
    {{#each animalObj}}
    <p>
      {{this.q_2}}
    </p>
    {{/each}}
    <div class="resultscore2">
      <p>
        <input class="with-gap" type="radio" name="ques2" id="a2" value="30" />
        <label for="a2">
          Horror
        </label>
        <br />
        <input class="with-gap" type="radio" name="ques2" id="b2" value="20" />
        <label for="b2">
          Drama
        </label>
        <br />
        <input class="with-gap" type="radio" name="ques2" id="c2" value="10" />
        <label for="c2">
          Comedy
        </label>
      </p>
    </div>
    {{#each animalObj}}
    <p>
      {{this.q_3}}
    </p>
    {{/each}}
    <div class="resultscore3">
      <p>
        <input class="with-gap" type="radio" name="ques3" id="a3" value="30" />
        <label for="a3">
          Bloody mary
        </label>
        <br />
        <input class="with-gap" type="radio" name="ques3" id="b3" value="20" />
        <label for="b3">
          Mojito
        </label>
        <br />
        <input class="with-gap" type="radio" name="ques3" id="c3" value="10" />
        <label for="c3">
          H2O
        </label>
      </p>
    </div>
  </form>
</div>
<button id="submit" class="btn postBTN waves-effect waves-light"><a href= "/api/results">
  Submit</a><i class="material-icons right">send</i>
</button>